@model IEnumerable<Game>

<h1>Liste des jeux</h1>

<table class="table table-hover">
    <thead>
        <tr class="table-dark">
            <td>Nom</td>
            <td>Description</td>
            <td>Année</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach(Game game in Model) {

            string? desc = game.Description;
            if(game.Description != null && game.Description.Length > 50) {
                desc = game.Description.Substring(0, 50) + "…";
            }

            <tr>
                <td>@game.Name</td>
                <td>@desc</td>
                <td>@game.ReleaseYear</td>
                <td>
                    <a asp-controller="Game" asp-action="Detail" 
                       asp-route-id="@game.Id" class="btn btn-danger">Detail</a>
                </td>
            </tr>
        }
    </tbody>

</table>

